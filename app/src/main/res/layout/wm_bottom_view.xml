<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_gray_line"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
         >

        <RelativeLayout
            android:gravity="center"
            android:id="@+id/layout_dzz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

                <TextView
                    android:padding="10dp"
                    android:id="@+id/order_text_dzz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/bottom_text"
                    android:text="待制作"
                     />

        </RelativeLayout>



        <RelativeLayout
            android:gravity="center"
            android:id="@+id/layout_zzz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >



                <TextView
                    android:padding="10dp"
                    android:id="@+id/order_text_zzz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="制作中"
                    android:textColor="@color/bottom_text"
                />

        </RelativeLayout>


        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/layout_dps"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

                <TextView
                    android:padding="10dp"
                    android:id="@+id/order_text_dps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="待配送"
                    android:textColor="@color/bottom_text"
                    />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
