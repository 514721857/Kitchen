<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

        <android.support.v7.widget.CardView
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">
            >


                <RelativeLayout

                    android:id="@+id/primaryContentCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/lin_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                                <TextView
                                    android:id="@+id/order_list_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="姓名"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/order_list_phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"

                                    android:text="电话"
                                    android:textColor="@android:color/black" />

                                <TextView

                                    android:id="@+id/order_list_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"

                                    android:text="地址" />

                                <TextView

                                    android:id="@+id/order_list_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"

                                    android:text="清单" />

                                <LinearLayout
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                        <TextView

                                            android:id="@+id/order_list_song"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="配送费" />

                                        <TextView

                                            android:id="@+id/order_list_can"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="餐费" />

                                        <TextView

                                            android:id="@+id/order_list_total"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="总计" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/order_list_bz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="5dp"

                                    android:text="备注" />

                                <TextView
                                    android:id="@+id/order_list_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="5dp"

                                    android:text="时间" />


                                <TextView
                                    android:id="@+id/order_send_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="5dp"

                                    android:text="时间" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginRight="10dp"
                            android:id="@+id/lin_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                                <Button
                                    android:id="@+id/order_btn_phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:background="@drawable/touch_bg"
                                    android:text="打电话" />


                                <Button
                                    android:layout_marginTop="20dp"
                                    android:id="@+id/order_list_zt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:background="@drawable/touch_bg"
                                    android:text="状态" />
                        </LinearLayout>


                </RelativeLayout>
        </android.support.v7.widget.CardView>>



</RelativeLayout>