<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_gray_line"
    android:layout_height="50dp">

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:gravity="center"
            android:id="@+id/layout_zq_dzz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/zq_dzz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/bottom_text"
                android:text="待制作"
                />

        </RelativeLayout>



        <RelativeLayout
            android:gravity="center"
            android:id="@+id/layout_zq_zzz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >



            <TextView
                android:id="@+id/zq_zzz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="制作中"
                android:textColor="@color/bottom_text"
                />

        </RelativeLayout>


        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/layout_zq_dqc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/zq_dqc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="待取餐"
                android:textColor="@color/bottom_text"
                />

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/layout_zq_yqc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/zq_yqc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="已取餐"
                android:textColor="@color/bottom_text"
                />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
